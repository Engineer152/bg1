{
  "exclude": [
    "node_modules",
    "**/.*/"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "incremental": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
